doctype html

html
    head
        title CA4106 Cloud Computing
        link(rel="icon" href="/assets/logo.ico")
        link(rel="stylesheet", href="/css/bootstrap.min.css")
    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            a(class="navbar-brand" href="/") Navbar
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")

        div(class="container-fluid")
            div(class="row")
                each movie in movies
                    div(class="modal fade" id=`${movie.imdbID}` tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true")
                        div(class="modal-dialog" role="document")
                            div(class="modal-content")
                                div(class="modal-header")
                                    h5(class="modal-title" id=`${movie.imdbID}`)= movie.Title
                                    button(type="button" class="close" data-dismiss=`#${movie.imdbID}` aria-label="Close")
                                        span(aria-hidden="true") &times;
                                    div(class="modal-body")
                                        p Boy

                    div(class="col-lg-1" data-toggle=`modal` data-target=`#${movie.imdbID}`)
                        div(class="card mx-2 mw-10" )
                            div(class="card-header")
                                img(src=movie.Poster class="card-img-top" alt=movie.Title)
                            div(class="card-body")
                                h4(class="card-title")= movie.Title
                                h5(class="card-subtitle mb-2 text-muted")= ` in ${movie.Year} by ${movie.Director}`
                                p(class="card-text")= ` in ${movie.Plot.substring(30)}...`
                                button(data-toggle=`modal` data-target=`#${movie.imdbID}`) info
                            div(class="card-footer")
                                each genre in movie.Genre.split(", ")
                                    span(class="badge badge-pill badge-primary")=genre


